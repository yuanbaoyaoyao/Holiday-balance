<!--pages/date/date.wxml-->
<view class="date">
    <block wx:for="{{datesOfYear}}" wx:key="index" wx:for-item="dates">
        <view class="date-now">
            <text>{{yearMonths[index]}}</text>
        </view>
        <view class="date-weekdays">
            <view class="date-weekdays-item" wx:for="{{weekdays}}" wx:key="index">{{item}}</view>
        </view>
        <view class="date-arrays">
            <scroll-view scroll-y="true">
                <view class="date-array" wx:for="{{dates}}" wx:key="index" wx:for-index="datesIndex">
                    <view class="date-item" wx:for="{{item}}" wx:for-index="itemIndex" wx:for-item="date" wx:key="itemIndex">
                        <view class="{{today==date.gregorian&&monthNow==index+1?'date-highlight':''}} date-item-info">
                            <text class="date-item-gregorian">{{date.gregorian}}</text>
                            <text class="date-item-lunar">{{date.lunar}}</text>
                        </view>
                    </view>
                </view>
            </scroll-view>
        </view>
        <!-- <view class="date-analysis">
        <text>本月放假共10天，剩余10天</text>
    </view> -->
    </block>
</view>
